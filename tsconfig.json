{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Keep this! TypeScript will only type-check, not generate JS/DTS itself

    /* ES Module Interop */
    "esModuleInterop": true, // Facilitates interoperability between CommonJS and ES Modules imports

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "demo",
    "src/**/*.dev.ts",
    "src/**/*.test.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "vite.config.ts"
  ]
}
